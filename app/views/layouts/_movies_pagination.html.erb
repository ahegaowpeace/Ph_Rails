<h1>Movies#index</h1>
<div class="row mb-2">
  <% movies.each do |movie| %>
    <div class="col-sm-3 col-6 mb-2">
      <a href="/movies/<%= movie.id %>">
        <p class="mb-0" style="overflow: hidden; text-overflow:ellipsis; white-space: nowrap;"><small><%= movie.title %></small></p>
        <img src="/assets/images/samnale.jpg" style="width: 100%">
      </a>
    </div>
  <% end %>
  <%= paginate movies %>
</div>
